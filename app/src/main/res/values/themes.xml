<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhosPlaying" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_super_dark</item>
        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/MyToolbar</item>
        <!-- Card style -->
        <item name="cardViewStyle">@style/MyCardView</item>
        <!-- Bottom navigation view -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigationView</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/blue_dark_2</item>
    </style>

    <style name="MyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/blue_dark_3</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/blue_dark</item>
    </style>

    <!-- START Bottom Navigation View-->
    <style name="MyBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/blue_dark</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationViewText.Active</item>
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationViewText</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">20dp</item>
    </style>

    <style name="MyBottomNavigationViewText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
        <item name="itemIconSize">20dp</item>
    </style>

    <style name="MyBottomNavigationViewText.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- END Bottom Navigation View-->

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_super_dark</item>
    </style>
</resources>